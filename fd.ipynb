
import pandas as pd

from sklearn.model_selection import train_test_split
from sklearn.preprocessing import OneHotEncoder, MinMaxScaler
from sklearn.compose import ColumnTransformer
from sklearn.pipeline import Pipeline

from category_encoders import TargetEncoder

from sklearn.ensemble import RandomForestRegressor, RandomForestClassifier
from sklearn.metrics import r2_score, accuracy_score

df = pd.read_csv("Fraud 6.csv")

X = df[
    ["Name",
     "Account_Type",
     "Account_Age_Days",
     "Completed_Projects / Posted_Jobs"]
]

y1 = df["Disputes"]       # Regression
y2 = df["Avg_Rating"]     # Regression
y3 = df["Is_Fraud"]       # Classification


X_train, X_test, y1_train, y1_test, y2_train, y2_test, y3_train, y3_test = train_test_split(
    X, y1, y2, y3, test_size=0.2, random_state=42
)

preprocessor = ColumnTransformer(
    transformers=[
        ("target_enc", TargetEncoder(), ["Name"]),
        ("onehot", OneHotEncoder(handle_unknown="ignore"), ["Account_Type"]),
        ("num", MinMaxScaler(), ["Account_Age_Days", "Completed_Projects / Posted_Jobs"])
    ]
)


pipe_disputes = Pipeline(
    steps=[
        ("preprocessing", preprocessor),
        ("model", RandomForestRegressor(random_state=42))
    ]
)

pipe_disputes.fit(X_train, y1_train)
y1_pred = pipe_disputes.predict(X_test)


pipe_rating = Pipeline(
    steps=[
        ("preprocessing", preprocessor),
        ("model", RandomForestRegressor(random_state=42))
    ]
)

pipe_rating.fit(X_train, y2_train)
y2_pred = pipe_rating.predict(X_test)


pipe_fraud = Pipeline(
    steps=[
        ("preprocessing", preprocessor),
        ("model", RandomForestClassifier(
            random_state=42,
            class_weight="balanced"
        ))
    ]
)

pipe_fraud.fit(X_train, y3_train)
y3_pred = pipe_fraud.predict(X_test)


print("R2 Score (Disputes):", r2_score(y1_test, y1_pred))
print("R2 Score (Avg_Rating):", r2_score(y2_test, y2_pred))
print("Accuracy (Is_Fraud):", accuracy_score(y3_test, y3_pred))


new_data = pd.DataFrame({
    "Name": ["Olivia"],
    "Account_Type": ["Client"],
    "Account_Age_Days": [120],
    "Completed_Projects / Posted_Jobs": [9]
})

result = pd.DataFrame({
    "Disputes": pipe_disputes.predict(new_data),
    "Avg_Rating": pipe_rating.predict(new_data),
    "Is_Fraud": pipe_fraud.predict(new_data)
})

print(result)


from sklearn.metrics import confusion_matrix, classification_report

cm = confusion_matrix(y3_test, y3_pred)
print("Confusion Matrix:\n", cm)

print("\nClassification Report:\n")
print(classification_report(y3_test, y3_pred))


